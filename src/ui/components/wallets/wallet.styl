@import '../../styles/colors.styl';

.content {
  padding: 14px;
}

.activeWallet
  width: 100%;
  margin-bottom: 24px;

.wallet
  width: 100%;
  background: $white;
  display: flex;
  box-shadow: 0 2px 4px 0 #9ba6b266;
  border-radius: 4px;
  padding: 14px;
  flex-wrap: wrap;
  position: relative;
  z-index: 1;
  margin-bottom: 8px;

  &.active
    height: 112px;

.accountIcon
  width: 28px;
  height: 26px;

  &.inactive
    border $disabled200 dashed 0.5px;

.balance
  font-weight: 600;

.title
  color: $disabled200;

.addAccount {
  display: block;
  width: 148px;
  height: 32px;
  color: $basic200;
  background: url(../../assets/img/add-14-basic-500.svg) 20px center no-repeat;
}

.activeAccountHeader {
  color: $white;
  margin: 0 0 8px 0;
  position: relative;
  z-index: 1;
}

.inner {
  flex-wrap: wrap;
}

.avatar {
  width: 48px;
  margin-right: 14px;
}

.accountData {
  flex-grow: 1;
  text-align: left;

  div {
    height: 24px;
  }
}

.controls {
  flex-basis: 100%;
  display: flex;
  position: relative;

  div {
    width: 40%;
    background: $basic50;
    border: 0.5px solid  $basic100;
    padding: 0 8px;
    height: 26px;
    border-radius: 2px;
    margin-right: 8px;
    display: flex;
    align-items: center;
    justify-content: center;

    &:last-child {
      position: absolute;
      right: 0;
      bottom: 0;
      width: 26px;
      height: 26px;
      border: 0 none;
      background: none transparent;
      margin-right: 0;
    }
  }
}

.showQrIcon {
  background: url(../../assets/img/qr-14-black.svg) left center no-repeat;
}
