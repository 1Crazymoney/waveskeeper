@import '../../styles/colors.styl';

.content
  padding: 14px;

.activeWallet
  width: 100%;
  margin-bottom: 24px;

  .wallet
    height: 112px;

    .accountData
      .accountName
        max-width: 245px;

    .controls
      width: 100%;
      margin-top: 18px;
      position: relative;
      bottom: 0;
      right: 0;
      display: flex;
      border-color: transparent;

      div
        padding: 0 8px 0 28px;
        background-color: $basic50;
        border: 0.5px solid  $basic100;
        height: 26px;
        border-radius: 2px;
        margin-right: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: normal;

        &:last-child
          position: absolute;
          padding: 0;
          right: 0;
          bottom: 0;
          width: 30px;
          height: 26px;
          background-color: transparent;
          border-color: transparent;
          margin-right: 0;


.activeWalletSelected

  &.activeAccountHeader
    width: auto;

.wallet
  width: 100%;
  background: $white;
  display: flex;
  box-shadow: 0 2px 4px 0 #9ba6b266;
  border-radius: 4px;
  padding: 14px;
  flex-wrap: wrap;
  position: relative;
  z-index: 1;
  margin-bottom: 8px;
  cursor: pointer;
  height: 64px;

  .controls
    margin-top: 0;
    position: absolute;
    bottom: 18px;
    right: 14px;
    border: 1px dashed $basic200;
    display: block;
    border-radius: 2px;

    div {
      padding: 0;
      border: 0 none;
    }

.accountIcon
  width: 28px;
  height: 26px;

  &.inactive
    border $disabled200 dashed 0.5px;

.balance
  font-weight: 600;

.title
  color: $disabled200;

.activeAccountHeader
  color: $white;
  margin: 0 0 8px 0;
  position: relative;
  z-index: 1;

.inner
  flex-wrap: wrap;

.avatar
  width: 40px;
  height: 40px;
  margin-right: 14px;
  & > div
    border: 0 none;

  img
    width: 40px !important;
    height: 40px !important;
    margin: 0;

.accountData
  flex-grow: 1;
  text-align: left;

  .accountName
    height: 24px;
    max-width: 220px;
    overflow: hidden;
    text-overflow: ellipsis;

  div
    height: 16px;

.showQrIcon
  background: url(../../assets/img/qr-14-black.svg) 8px 5px no-repeat;


.copyIconBlack
  display: block;
  cursor: pointer;
  background: url(../../assets/img/copy-14-black.svg) 8px 5px no-repeat $basic50;

