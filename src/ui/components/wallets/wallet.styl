@import '../../styles/colors.styl';

.content {
  background: $basic500;
  padding: 14px;
}

.walletBackground {
  height: 112px;
  position: absolute;
  top: 0;
  left: 0;
}

.activeWallet
  width: 100%;
  height: 150px;


.wallet
  width: calc(100% - 28px);
  margin: 0 14px;
  background: $white;
  display: flex;
  box-shadow: 0 2px 4px 0 #9ba6b2;
  border-radius: 4px;
  padding: 4px;

  &.active
    height: 112px;

.accountIcon
  width: 28px;
  height: 26px;

  &.inactive
    border $disabled200 dashed 0.5px;

.balance
  font-weight: 600;

.title
  color: $disabled200;

.addAccount {
  display: block;
  width: 148px;
  height: 32px;
  color: $basic200;
  background: url(../../assets/img/add-14-basic-500.svg) 20px center no-repeat;
}
