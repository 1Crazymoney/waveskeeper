@import '../../../styles/colors.styl';
@import '../../pages/styles/transactions.styl';

.notificationCard
  @extends .transaction-card
  padding: 0;
  box-shadow: none;
  border-radius: 0;

.notificationTxIconSmall
  @extends .txIcon

.groupEffect
  padding: 10px;
  z-index: 3;
  position: relative;
  border-radius: 4px;
  box-shadow: 0 2px 4px 0 #9ba6b266;
  background: $white;

.messagesGroup
  margin-bottom: 20px;

  .notififactionEllipsis
    max-width: 233px;
    overflow: hidden;
    white-space: nowrap;

  .groupBottom
    left: 0;
    top:0;
    position: absolute;
    width: 100%;
    height: 100%;

    &::after,
    &::before
      position: absolute;
      content: "";
      width: calc(100% - 20px);
      height: 10px;
      box-shadow: 0 2px 4px 0 #9ba6b266;
      z-index: 2;
      display: block;
      border-radius: 0 0 4px 4px;
      background: $white;
      left: 10px;
      bottom: -6px;

    &::after
      width: calc(100% - 40px);
      left: 20px;
      bottom: -12px;
      z-index: 1;
