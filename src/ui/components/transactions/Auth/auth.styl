@import '../../../styles/colors.styl';
@import '../../pages/styles/transactions.styl';

.authTransactionCard
  @extends .transaction-card

  .cardHeader,
  .cardContent
    flex-direction: column;
    margin: 0;

  .cardContent
    padding-left: 0;
    margin-bottom: 4px;
    text-align: center;

.authCard_collapsed
  .origin
    display: none;

.authTxIcon
  @extends .txIconBig

.authTxScrollBox
  @extends .txScrollBox
  flex-grow: 0;

.authOriginDescription
  @extends .originDescription
  color: $black;
  font-size: 12px;

.authOriginAddress
  @extends .originAddress
  padding-top:7px;
  margin-bottom: 4px;
  color: $black;
  font-size: 14px;
