@import '../../../styles/colors.styl';

:global .buttons-wrapper
  display: flex;
  align-items: center;
  justify-content: space-between;

.button
  width: 100%;
  height: 40px;
  display: block;
  border-radius: 4px;
  font-family: Roboto-Medium;
  font-size: 14px;
  text-align: center;
  white-space: nowrap;
  cursor: pointer;

  &.default
    background-color: $white;
    border: 1px solid $basic200;

    &:hover
      border: 1px solid $black;

  &:focus
    outline: none;

  &.submit
    background-color: $submit400;
    color: $white;

    &:hover
      background-color: $submit300;

    &.disabled,
    &:disabled,
    &[disabled]
      background-color: $submit200;
      cursor: default;

      &:hover
        background-color: $submit200;

  &.transparent
    background-color: transparent;

    &.disabled
      background-color: transparent;

    &:hover
      background: transparent;

  &.warning
    background-color: $error400;
    color: $white;

    &:hover
      background-color: $error300;

  &.interface
    background-color: $white;
    height: 32px;
    line-height: 32px;
    padding: 0 14px 0 40px;
    box-shadow: 0 2px 4px 0 #9ba6b266;
    font-family: Roboto;
    font-weight: 400;
    width: auto;
    margin: 0;
    border: 0.5px solid transparent;

    &:not(:last-child)
      margin-right: 14px;

    &:hover
      box-shadow: 0 4px 6px 0 #9ba6b266;

    &.disabled,
    &:disabled,
    &[disabled]
      background-color: transparent;
      border: 0.5px solid $basic200;
      box-shadow: none;
