@import '../../../styles/colors.styl';

.showAllScript
  max-height: none;
  div:first-child
    max-height: none;

.codeScript
  display: flex;
  word-break: break-all;
  overflow: hidden;
  white-space: normal;
  color: $black;

.data
  overflow: hidden;
  color: $black;

.headRow
  margin-bottom: 2px;

.headRow
.dataRow
  width: 100%;
  overflow: hidden!important;
  white-space: nowrap;
  margin-top: 2px;
  padding-right: 0px!important;
  margin-right: 0px!important;

div.dataTable
  display: block;
  height: 100%;


.dataItem
.dataItemData
.dataItemDataLast
  width: 50%;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-right: 0px!important;
  margin-right: 0px!important;

.dataItemData
  width: 25%;

.dataItemDataLast
  width: 50%;
