@import '../../../styles/colors.styl';

.avatar {
  display: inline-block;
  overflow: hidden;
  margin: auto;
  cursor: pointer;

  img {
    border-radius: 50%;
  }
}

.avatarList {
  display: flex;
  width: 100%;
  justify-content space-between;
  align-items: center;

  avatar {
    .selected {
      background-color: rgba(31, 90, 246, 0.1);
      border-radius: 2px;
      border: 1px solid transparent;

      img {
       border-radius: 50%;
       border: 1px solid $submit400;
       margin: 4px;
      }
    }
  }
}
