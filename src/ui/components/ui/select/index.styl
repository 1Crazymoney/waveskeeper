@import '../../../styles/colors.styl';

.select
  border: 0;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: Roboto;
  position: relative;

.list
.selectInput
  position: relative;
  width: 100%;
  border-radius: 4px;
  border: solid 1px $basic100;
  background-color: $white;
  padding: 0 14px;
  cursor: pointer;

.selectInput
  height: 40px;
  line-height: 35px;

.list
  box-shadow: 0 4px 6px 0 rgba(155, 166, 178, 0.4);
  margin-top: 2px;
  position: absolute;
  z-index: 50;

.listItem
  height: 40px;
  cursor: pointer;
  line-height: 35px;

