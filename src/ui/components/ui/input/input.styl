@import '../../../styles/colors.styl';

.input {
  position: relative;
  width: 100%;
  height: 40px;
  border-radius: 4px;
  border: solid 1px $basic100;
  background-color: $white;
  padding: 0 14px;

  &:focus {
    outline: none;
    border: 1px solid $submit;
  }

  &.error {
    background-color: rose;
    border-color: red;
  }
}

.textarea {
  padding: 14px;
}

:global .input-like {
  display: flex;
  align-items: center;
  box-shadow: 0 2px 4px 0 #9ba6b266;
  width: 100%;
  height: 42px;
  line-height: 24px;
  padding: 0 14px;
  border-radius: 4px;
  position: relative;
  background: $white;

  &.password-icon {
    padding-left: 42px;
    background: url(../../../assets/img/password-14-basic-200.svg) 14px center $white no-repeat;
  }
}
