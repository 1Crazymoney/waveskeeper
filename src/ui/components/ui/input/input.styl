@import '../../../styles/colors.styl';

.input {
  position: relative;
  width: 100%;
  height: 40px;
  border-radius: 4px;
  border: solid 1px $basic100;
  background-color: $white;
  padding: 0 14px;

  &:focus {
    outline: none;
    border: 1px solid $submit;
  }

  &.error {
    background-color: rose;
    border-color: red;
  }
}
