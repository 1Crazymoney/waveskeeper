@import '../../../styles/colors.styl';

.assets {
  width: 100%;
  position: relative;
  padding: 14px;
  height: 552px;
  overflow: auto;
  background: $basic50;
  padding-bottom: 30px;

  &::after {
    display: block;
    content: '';
    width: 100%;
    height: 112px;
    position: absolute;
    left: 0;
    z-index: 0;
    top: 0;
    background: -moz-linear-gradient(left, #6b94ff 0%, #1f5af6 100%);
    background: -webkit-linear-gradient(left, #6b94ff 0%, #1f5af6 100%);
    background: linear-gradient(to right, #6b94ff 0%, #1f5af6 100%);
  }
}

.addAccount {
  display: flex;
  justify-content: center;
  padding: 0 14px 0 34px;
  white-space: nowrap;
  height: 32px;
  width: 148px;
  line-height: 32px;
  cursor: pointer;
  border-radius: 4px;
  background: url(../../../assets/img/add-14-basic-500.svg) 13px center no-repeat;
  i {
    margin-right: 10px;
  }
}

.logoMargin {
  margin-top: 100px;
  margin-bottom: 44px;
}
