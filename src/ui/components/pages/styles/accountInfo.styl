@import '../../../styles/colors.styl';

.content
  padding: 24px 14px 0;
  height: 100%;
  width: 100%;
  display: inline-block;
  margin: auto;
  background-color: $basic50;

.editIcon {
  background: url(../../../assets/img/edit-14-basic-500.svg) center no-repeat;
  width: 14px;
  height: 14px;
  display: inline-block;
}

.editIconBtn {
  width: 14px;
  height: 14px;
  display: inline-block;
  margin-left: 6px;
}

.accountName {
  border-bottom: 1px dotted $basic500;
}

.balance {
  font-weight: 500;
  margin-top: 5px;
}

.avatar {
  margin: 0 14px 0 0;
}

.wallet {
  width: 100%;
  display: flex;
  position: relative;
}

.accountData {
  display: flex;
  flex-wrap: wrap;
  flex-grow: 1;

  div {
    flex-basis: 100%;
  }
}

.buttonsWrapper {
  border-bottom: 1px dashed $basic200;
  justify-content: flex-start;
  align-items: flex-start;
  padding-bottom: 24px;
}

.activeAccount {
  background: url(../../../assets/img/activeasset-18-submit-400.svg) 14px center no-repeat;
}

.showQrIcon {
  background: url(../../../assets/img/qr-14-basic-500.svg) 14px center no-repeat;
}
