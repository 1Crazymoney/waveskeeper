@import '../../../styles/colors.styl';

.transaction
  display: flex;
  flex-direction: column;
  height: calc(100% - 48px);
  position: relative;

  .txRow
    width: 100%;
    height: 60px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    word-break: break-all;

    &.bordered
      border-top: 1px dashed $basic200;
      border-bottom: 1px dashed $basic200;

      &Top
        border-top: 1px dashed $basic200;
        border-bottom: 0 none;

      &Bottom
        border-bottom: 1px dashed $basic200;
        border-top: 0 none;

    & + .txRow
      border-top: 1px dashed $basic200;

  .txScrollBox
    overflow: auto;
    position: relative;
    padding: 0 24px;
    flex-grow: 1;

  .txIcon div
    width: 48px;
    height: 48px;
    margin: 24px auto 0 auto;

  .txBalance
    width: 100%;
    margin: 0 auto 36px auto;
    white-space: nowrap;
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight: 400;
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;

    &.block
      display: block;

    span:first-child
      font-weight: 600;

.txButtonsWrapper
  width: 100%;
  padding: 14px 14px;
  background: $white;
  border-top: 1px solid $basic100;
  text-align: center;
  flex-wrap: wrap;

.txBigIcon
  width: 80px;
  height: 80px;
  margin-left: auto;
  margin-right: auto;

.txFinal
  margin-top: 130px;

  button
    margin: 44px auto 0 auto;

.txSign
  .infoBlock
    margin: 0 0 64px 0;

  .iconMargin
    margin: 64px auto 4px auto;

  .appName
    margin-right: 5px;
    max-width: 100%;
    word-break: break-all;

.originWarning {
  flex-basis: 100%;
  margin: 10px 0 -4px 0;

  div:first-child {
    text-decoration: underline;
    padding-bottom: 2px;
  }
}