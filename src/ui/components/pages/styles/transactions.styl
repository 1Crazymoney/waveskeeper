@import '../../../styles/colors.styl';

.transaction {
  display: flex;
  flex-direction: column;
  height: 100%;
  position: relative;

  .txRow {
    width: calc(100% - 48px);
    padding: 12px 0;
    margin: 0 24px;
    border-top: 1px dashed $basic200;

    &:first-child {
      border-top: 0 none; // todo @uIsk / fix it
    }
  }

  .txIcon div {
    width: 48px;
    height: 48px;
    margin: auto;
  }

  .txBalance {
    width: calc(100% - 48px);
    margin: 0 auto 36px auto;
    white-space: nowrap;
    line-height: 1em;
    font-weight: 600;
    display: flex;
    justify-content: center;
    align-items: center;

      span {
        margin: 0 7px;
      }
  }

  .txButtonsWrapper {
    width: calc(100% - 48px);
    position: fixed;
    bottom: 0;
    margin: 24px;
  }
}