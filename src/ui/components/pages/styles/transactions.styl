@import '../../../styles/colors.styl';

.transaction {
  display: flex;
  flex-direction: column;
  height: 100%;
  position: relative;
  font-weight: 400;

  .txWallet {
    & > div {
      border-radius: 0;
      background: darkgray;
      flex-wrap: nowrap;
    }

    //changeaccount icon
  }

  .txIcon {
    width: 48px;
    height: 48px;
    margin: 0 auto;
    border-radius: 50%;

  }



  .txRow {
    width: calc(100% - 48px);
    margin: 12px auto;
    border-bottom: 1px dashed $basic200;
    &:last-child {
      border-bottom: 0 none;
    }
    //.txValue {
    //  font-weight: 600;
    //}
  }

  .txBalance {
    width: calc(100% - 48px);
    margin: 0 auto;
    line-height: 40px;
    font-weight: 600;
    white-space: nowrap;
  }

  .txButtonsWrapper {
    width: calc(100% - 48px);
    position: fixed;
    bottom: 0;
    margin: 24px;

  }
}