@import '../../styles/colors.styl'

.bottom {
  position: absolute;
  bottom: 14px;
  display: flex;
  justify-content: space-between;
  white-space: nowrap;
  width: 100%;
  padding: 0 14px;

  &.hidden {
    display: none;
  }

  .network {
    background: url(../../assets/img/network-14-basic-500.svg) left center no-repeat;
    padding-left: 22px;
    flex-grow: 1;
    cursor: pointer;
    span {
      border-bottom: 1px dotted $basic500;
    }
  }
}

.selectNetworks
  position: absolute;
  bottom: -9px;
  background-color: white;
  padding: 5px;
  box-shadow: 0 2px 4px 0 #9ba6b2;
  border-radius: 5px;
  z-index: 10;

  .network
    margin: 5px;

    span
      border-bottom: 1px solid $basic500;

  .selectedNet
    cursor: default;
    
    span
      border-bottom: 1px dotted $basic500;




