@import "./colors.styl";
@import "./fonts.styl";

:global *
  border: 0;
  margin: 0;
  padding: 0;
  box-sizing: border-box;

:global *
  font-family: Roboto;

:global body
  width: 100%;
  height: 100%;
  display: block;
  line-height: normal;
  font-family: Roboto;
  position: fixed;
  font-weight: 300;

ul
  list-style-type: none;
  padding: 0;

// align
:global #app-content
:global .app
  height: 100%;
  max-height: 600px;
  overflow: hidden;

:global .left
  text-align: left;

:global .right
  text-align: right;

:global .center
  text-align: center;

:global .relative
  position: relative;

:global .absolute
  position: absolute;

:global .flex
  display: flex;
  justify-content: space-between;
  align-items: center;

// typography
:global .title1
  font-size: 24px;
  font-weight: 400;

:global .headline1
  font-size: 18px;

:global .headline2
  font-size: 18px;
  font-family: Roboto-Medium, Arial, Tahoma;

:global .headline3
  font-size: 16px;

:global .headline4
  font-size: 16px;
  font-family: Roboto;

:global .body1
  font-size: 14px;

:global .body2
  font-size: 16px;
  font-family: Roboto-Medium, Arial, Tahoma;

:global .body3
  font-size: 12px;

:global .tag1
  font-size: 11px;

:global .link
  text-decoration: underline;
  font-weight: 400;
  cursor: pointer;

  &:blue
    color: $submit400;
  &:hover
    text-decoration: none;

// layout
$layout-10 = 10px;
$layout-14 = 14px;
$layout-24 = 24px;

:global .fullwidth
  width: 100%;

:global .centered
  margin: 0 auto;

:global .margin-main
  margin-bottom: $layout-14;

:global .margin-main-big
  margin-bottom: $layout-24;

:global .margin1
  margin-bottom: $layout-10;

:global .margin2
  margin-bottom: $layout-10 * 2;

:global .margin3
  margin-bottom: $layout-10 * 3;

:global .margin4
  margin-bottom: $layout-10 * 4;

:global .marginTop1
  margin-top: $layout-10;

:global .marginTop2
  margin-top: $layout-10 * 2;

:global .marginTop3
  margin-top: $layout-10 * 3;

:global .marginTop4
  margin-top: $layout-10 * 4;

:global .height
  height: 100%;
  display: block;

// font-weights
:global .font300
  font-weight: 300;

:global .font400
  font-weight: 400;

:global .font500
  font-weight: 500;

:global .font600
  font-weight: 600;

// misc
:global .separator
  height: 1px;
  border-bottom: 1px dashed $basic200;

:global .input-title
  display: inline-block;
  margin-bottom: 7px;

:global .border-bottom
  border-bottom: 1px solid $accent50;

:global .border-dashed
  border: 1px dashed $basic200;

:global .grey-line
  background: $basic50;
  border: 1px dashed $basic200;
  display: flex;
  height: 42px;
  align-items: center;
  justify-content: center;

:global .plate
  background: $basic50;
  border: 1px dashed $basic200;
  padding: $layout-14;
  border-radius: 2px;

// modal
:global #app-modal
  position: relative;
  width: 100%;
  display: block;
  top: 0;
  z-index: 2;

:global .modal
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;

:global .notification
  display: block;
  width: auto;
  height: 32px;
  padding: 0 24px;
  line-height: 32px;
  position: absolute;
  bottom: 14px;
  border-radius: 2px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 14px;
  background: rgba(0, 0, 0, 0.8);
  color: $white;
  z-index: 1;
  top: calc(100% - 42px);

  span {
    max-width: 276px;
    white-space: nowrap;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  &.error
    background-color: $error400;
    z-index: 2;

  &.active-asset
    height: auto;
    top: -110px;
    text-align: center;

// temp

:global * {
  &::-webkit-scrollbar {
    width: 5px;
    height: 8px;
    background-color: #aaa;
  }
  &::-webkit-scrollbar-thumb {
    background: #000;
  }
}